<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="26dp"
            app:expandedTitleMarginEnd="64dp"
            android:fitsSystemWindows="true">
            <android.support.v4.view.ViewPager
                android:id="@+id/liveViewPager"
                android:layout_width="match_parent"
                android:layout_height="260sp"

                app:layout_collapseMode="parallax"/>




            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat"
                app:layout_collapseMode="pin" />


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:background="#000000">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="25sp"
                    android:text="MUSIC"
                    android:gravity="center"
                    android:textColor="@color/TextWhiteColor"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/music_scroll"

                android:layout_width="match_parent"
                android:layout_height="120sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:background="#000000">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:text="DANCE"
                android:gravity="center"
                android:textColor="@color/TextWhiteColor"/>
        </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/dance_scroll"
                    android:layout_width="wrap_content"
                    android:layout_height="120sp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:background="#000000">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="25sp"
                    android:text="DRAMA"
                    android:gravity="center"
                    android:textColor="@color/TextWhiteColor"/>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/drama_scroll"
                android:layout_width="wrap_content"
                android:layout_height="120sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:background="#000000">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="25sp"
                    android:text="LITERARY"
                    android:gravity="center"
                    android:textColor="@color/TextWhiteColor"/>
            </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/literary_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="120sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:background="#000000">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="25sp"
                    android:text="QUIZ"
                    android:gravity="center"
                    android:textColor="@color/TextWhiteColor"/>
            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/quiz_scroll"
                android:layout_width="match_parent"
                android:layout_height="120sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:background="#000000">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="25sp"
                    android:text="FINE ARTS"
                    android:gravity="center"
                    android:textColor="@color/TextWhiteColor"/>
            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/finearts_scroll"
                android:layout_width="match_parent"
                android:layout_height="120sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:background="#000000">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="25sp"
                    android:text="FILM"
                    android:gravity="center"
                    android:textColor="@color/TextWhiteColor"/>
            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/film_scroll"
                android:layout_width="match_parent"
                android:layout_height="120sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:background="#000000">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="25sp"
                    android:text="SPECIALS"
                    android:gravity="center"
                    android:textColor="@color/TextWhiteColor"/>
            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/specials_scroll"
                android:layout_width="match_parent"
                android:layout_height="120sp"/>






        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
