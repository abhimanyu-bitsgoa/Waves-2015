<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00e4e4e4"
    android:paddingRight="10sp"


    >
    <android.support.v7.widget.CardView
        android:id="@+id/eventDescCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0.3dp"
        android:layout_margin="5dp"
        card_view:cardElevation="2dp"
        >
        <RelativeLayout
            android:id="@+id/cardViewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <TextView
                android:id="@+id/descriptionHeader"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:paddingTop="5sp"
                android:paddingLeft="5sp"
                android:paddingRight="2sp"
                android:background="@color/colorAccent"
                android:textColor="@color/TextWhiteColor"
                android:textSize="22sp"
                android:text="About"

                android:layout_alignParentTop="true"
                android:layout_gravity="bottom"

                />
            <TextView
                android:id="@+id/descriptionContent"
                android:layout_below="@+id/descriptionHeader"
                android:layout_alignParentLeft="true"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/PrimaryDark"
                android:text="
            Indian Rock is one of its finest.
            It has been the most participated
            event of all the music events.
            Its speciality is the classical mix
            of indian music with the western rock music.
            "/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>