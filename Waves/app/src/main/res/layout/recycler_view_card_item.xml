<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2sp"
        android:layout_marginTop="7sp"
        android:layout_marginLeft="7sp"
        android:layout_marginRight="7sp"
        card_view:cardElevation="3dp"
        >
        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="7sp">


                <TextView
                    android:id="@+id/eventNameTimeline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:textColor="@color/PrimaryDark"
                    android:textSize="22sp"
                    android:text="Test"
 />
                <TextView
                    android:id="@+id/eventStageTimeline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:textColor="@color/LightGreyText"
                    android:textSize="14sp"
                    android:text="Semi-Final"
                    android:layout_marginTop="28sp"
                    />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="70sp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="5sp"
                >

                <ImageView
                    android:padding="3sp"
                    android:id="@+id/categoryIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/categoryicon"

                    />

                <TextView
                    android:id="@+id/categoryTimeline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:paddingTop="3sp"

                    android:textColor="@color/LightGreyText"
                    android:textSize="11sp"
                    android:text="Test"

                     />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="10sp"
                    >

                    <ImageView
                        android:padding="3sp"
                        android:id="@+id/venueicon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/locationicon"

                        />

                    <TextView
                        android:id="@+id/venueTimeline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:paddingTop="3sp"

                        android:textColor="@color/LightGreyText"
                        android:textSize="11sp"
                        android:text="LT 3"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="10sp"
                    >

                    <ImageView
                        android:padding="3sp"
                        android:id="@+id/timeicon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/timeicon"
                        android:orientation="horizontal"

                        />

                    <TextView
                        android:id="@+id/timeTimeline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:paddingTop="3sp"

                        android:textColor="@color/LightGreyText"
                        android:textSize="11sp"
                        android:text="10:00 pm"
                        />

                </LinearLayout>


            </LinearLayout>




            <ImageView

                android:id="@+id/img_thumbnail"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:scaleType="centerCrop"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>