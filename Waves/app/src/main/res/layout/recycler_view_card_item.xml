<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        card_view:cardElevation="3dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">
        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:padding="7dp">


                <TextView
                    android:id="@+id/eventNameTimeline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/PrimaryDark"
                    android:textSize="22dp"
                    android:text="Test"
 />
                <TextView
                    android:id="@+id/eventStageTimeline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/LightGreyText"
                    android:textSize="14dp"
                    android:text="Semi-Final"
                    android:layout_below="@+id/eventNameTimeline"
                    />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:layout_marginTop="70dp">
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                >

                <ImageView
                    android:padding="3dp"
                    android:id="@+id/categoryIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/categoryicon"

                    />

                <TextView
                    android:id="@+id/categoryTimeline"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="3dp"

                    android:textColor="@color/LightGreyText"
                    android:textSize="11dp"
                    android:text="Test"

                     />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    >

                    <ImageView
                        android:padding="3dp"
                        android:id="@+id/venueicon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/locationicon"

                        />

                    <TextView
                        android:id="@+id/venueTimeline"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="3dp"

                        android:textColor="@color/LightGreyText"
                        android:textSize="11dp"
                        android:text="LT 3"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    >

                    <ImageView
                        android:padding="3dp"
                        android:id="@+id/timeicon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/timeicon"
                        android:orientation="horizontal"

                        />

                    <TextView
                        android:id="@+id/timeTimeline"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="3dp"

                        android:textColor="@color/LightGreyText"
                        android:textSize="11dp"
                        android:text="10:00 pm"
                        />

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>
        </LinearLayout>

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:gravity="center_vertical|right"
    android:layout_margin="5dp">

            <ImageView

                android:id="@+id/img_thumbnail"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_alignParentRight="true"
                />
</LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>